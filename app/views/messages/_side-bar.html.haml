.side-bar

  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "top-items__icons--edit" do
          = icon('fas', 'edit', class: 'icon')
        = link_to edit_user_path(current_user), class: "top-items__icons--cog" do
          = icon('fas', 'cog', class: 'icon')

  .side-bar__groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
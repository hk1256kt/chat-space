.chat-main

  .main-header
    .main-header__left
      .main-header__left__group-name
        = @group.name
      .main-header__left__member
        .main-header__left__member__list
          Member:
        .main-header__left__member__list-member
          - @group.users.each do |member|
            = member.name

    .main-header__edit-btn
      = link_to 'Edit',edit_group_path(@group),class:"main-header__edit-btn--edit"
        
  .main-message
    = render @messages
        
  .main-form
    = form_for [@group, @message] do |f|
      .main-form__box
        .main-form__box__input
          = f.text_field :content, class: "main-form__box__input__message", placeholder: 'type a message'
          = f.label :image, class: 'main-form__box__input__image'do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'main-form__box__input__image__file'
        = f.submit 'Send', class: 'main-form__box__btn'

    